<UserControl x:Class="PLWPF.Employer_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" >
    <Grid Margin="15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Grid.Column" Value="1"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
        </Grid.Resources>
        
        <Label Content="_ID:" Target="{Binding ElementName=txtID}"/>
        <ComboBox Name="txtID" Margin="0,5" Grid.Column="1" IsEditable="True" Width="200" HorizontalAlignment="Left"/>

        <Label Content="_First Name:" Target="{Binding ElementName=txtFirstName}" Grid.Row="1"/>
        <TextBox Name="txtFirstName" Grid.Row="1"/>

        <Label Content="_Last Name:" Target="{Binding ElementName=txtLastName}" Grid.Row="2"/>
        <TextBox Name="txtLastName" Grid.Row="2"/>

        <Label Content="_Company Name:" Target="{Binding ElementName=txtCompName}" Grid.Row="3"/>
        <TextBox Name="txtCompName" Grid.Row="3"/>

        <Label Content="_Phone Number:" Target="{Binding ElementName=txtPhoneNum}" Grid.Row="4"/>
        <TextBox Name="txtPhoneNum" Grid.Row="4"/>

        <Label Content="_Civic Address:" Target="{Binding ElementName=txtAddress}" Grid.Row="5"/>
        <StackPanel Grid.Column="1" Grid.Row="5">
            <Label Content="Address:"/>
            <TextBox Name="txtAddress"/>
            <WrapPanel>
                <Label Content="Ci_ty:" Target="{Binding ElementName=txtCity}"/>
                <ComboBox Name="txtCity" Width="100" Margin="30,0,0,0"/>
            </WrapPanel>
        </StackPanel>

        <Label Content="_Speciality:" Target="{Binding ElementName=txtSpec}" Grid.Row="6"/>
        <ComboBox Name="txtSpec" Grid.Row="6" Grid.Column="1" Margin="0,5" Width="200" HorizontalAlignment="Left"/>

        <Label Content="_Established:" TabIndex="{Binding ElementName=txtEstabDate}" Grid.Row="7"/>
        <DatePicker Name="txtEstabDate" Grid.Row="7" Grid.Column="1" Margin="0,5" Width="200" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
