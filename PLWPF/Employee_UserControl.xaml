<UserControl x:Class="PLWPF.Employee_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" >


    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Grid.Column" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Width" Value="200"/>
                
            </Style>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="_ID:" Target="{Binding ElementName=txtID}" Grid.Column="0" />
        <TextBox Name="txtID" />

        <Label Content="_First Name:" Target="{Binding ElementName=txtFirstName}" Grid.Row="1"/>
        <TextBox Name="txtFirstName" Grid.Row="1" />

        <Label Content="_Last Name:" Target="{Binding ElementName=txtLastName}" Grid.Row="2"/>
        <TextBox Name="txtLastName" Grid.Row="2"/>

        <Label Content="_Birthday" Target="{Binding ElementName=Birthday}" Grid.Row="3"/>
        <TextBox Name="txtBirthday" Grid.Row="3"/>

        <Label Content="_Phone Number:" Target="{Binding ElementName=txtPhoneNumber}" Grid.Row="4"/>
        <TextBox Name="txtPhoneNumber" Grid.Row="4"/>
        
        <Label Content="_Civic Address:" Grid.Row="5"/>
        <StackPanel >
            <Grid>
                
            </Grid>
        </StackPanel>

        <Label Content="_Experiance (years):" Target="{Binding ElementName=txtExperiance}" Grid.Row="6"/>
        <TextBox Name="txtExperiance" Grid.Row="6"/>

        <Label Content="_Recommendations:" Target="{Binding ElementName=txtRecommendations}" Grid.Row="7"/>
        <TextBox Name="txtRecommendations" Grid.Row="7"/>

        <Label Content="_Email:" Target="{Binding ElementName=txtEmail}" Grid.Row="8"/>
        <TextBox Name="txtEmail" Grid.Row="8"/>


    </Grid>
</UserControl>
